/* pages/handWriting.wxss */

page {
    background: #fbfbfb;
    height: auto;
    overflow: hidden;
}

.wrapper {
    width: 100%;
    height: 99.99vh;
    display: flex;
    font-size: 28rpx;
}

.hand-left {
    height: 80vh;
    width: 60px;
    margin: auto 0rpx;
}

/* 清除 */
.del-btn {
    position: absolute;
    border: 1px solid #808080;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 30vh;
    transform: rotate(90deg);
    color: #808080;
    border-radius: 10rpx;
    height: 80rpx;
    width: 120rpx;
}

/* 保存 */
.sub-btn {
    position: absolute;
    border: 1px solid #02d000;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 60vh;
    transform: rotate(90deg);
    color: #02d000;
    border-radius: 10rpx;
    height: 80rpx;
    width: 120rpx;
}

.hand-center {
    border: 1rpx dashed #e9e9e9;
    flex: 1;
    overflow: hidden;
    box-sizing: border-box;
}

.hand-writing {
    background: #fff;
    width: 100%;
    height: 100vh;
}

.hand-right {
    display: inline-flex;
    align-items: center;
    height: 100%;
    width: 60px;
}

.hand-title {
    transform: rotate(90deg);
    flex: 1;
    position: absolute;
    width: 300rpx;
    right: -80rpx;
}